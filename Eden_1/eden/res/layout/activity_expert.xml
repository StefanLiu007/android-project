<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/aliceblue"
                android:orientation="vertical" >

                <com.eden.view.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/civ_ei"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:background="@drawable/krt"
                    app:border_color="#FFffffff"
                    app:border_width="1dp" />

                <TextView
                    android:id="@+id/tv_en"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="姓名:"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_es"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="性别：" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/tv_eads"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="邮箱：" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_chat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/skin_qz_btn_mood" />

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/kqi" />

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/lbo" />

                    <ImageView
                        android:id="@+id/i_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_share_bg"
                        android:contentDescription="@null"
                        android:src="@drawable/select_member_discussion_icon" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/tv_kkkkk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人简介："
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/tv_ei"
                android:maxLines="4"
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:id="@+id/tv_ssssss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户评价："
                android:textSize="12sp" />

          
        </LinearLayout>
   

</LinearLayout>