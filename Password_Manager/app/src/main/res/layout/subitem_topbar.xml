<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/base_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topbar_tv_save"
        style="@style/topbar_button_small"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/topbar_item_click"
        android:clickable="true"
        android:drawableLeft="@drawable/topbar_ok"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="保存" />

    <TextView
        android:id="@+id/topbar_tv_more"
        style="@style/topbar_button_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding"
        android:background="@drawable/topbar_item_click"
        android:clickable="true"
        android:drawableLeft="@drawable/item_icon_more"
        android:drawablePadding="10dp"
        android:gravity="center_vertical" />
</RelativeLayout>