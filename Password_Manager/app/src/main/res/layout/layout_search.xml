<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/magin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/base_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_search"
            android:layout_margin="@dimen/magin"
            android:layout_gravity="center"
            style="@style/BezelImageView"
            android:src="@drawable/choose_password_paddy_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_search"
            android:layout_gravity="center"
            style="@android:style/TextAppearance.Material.Widget.TextView" />
    </LinearLayout>

</LinearLayout>
