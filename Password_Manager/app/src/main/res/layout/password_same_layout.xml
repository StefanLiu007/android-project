<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_coloured"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/choose_password_paddy_icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_icon"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_toRightOf="@id/iv_icon"
        android:text="输入您的PIN"
        android:textColor="@color/black"
        android:textSize="@dimen/nornal_text_size" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginTop="@dimen/padding"
        android:layout_toRightOf="@id/iv_icon"
        android:text="从另一个app切换回时会使用PIN码"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:id="@+id/btn_confirm"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_gray_background"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_confirm"
        android:layout_marginBottom="@dimen/large_padding"
        android:background="@drawable/et_focus_layer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="PIN码"
        android:padding="@dimen/padding"
        android:singleLine="true"
        android:textColorHint="@color/gray_text"
        android:textSize="@dimen/large_text_size" />

</RelativeLayout>