<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6f8"
    tools:context=".activity.InputMainKeyActivity">

    <ImageView
        android:id="@+id/openkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearlayout_background"
        android:background="#e4e4e4" />

    <LinearLayout
        android:id="@+id/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fbfbfb" />

        <EditText
            android:id="@+id/input_mainkey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="22"
            android:background="#fff"
            android:gravity="center"
            android:hint="输入主密码"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fbfbfb" />
    </LinearLayout>

</RelativeLayout>