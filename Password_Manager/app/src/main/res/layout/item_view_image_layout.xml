<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding"
    android:layout_marginRight="@dimen/padding"
    android:layout_marginTop="@dimen/padding">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/base_blue"
        android:textSize="@dimen/small_text_size" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"
        android:layout_toLeftOf="@id/iv_icon"
        android:background="@drawable/et_bottom_selector"
        android:paddingBottom="@dimen/inner_padding"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text"
        android:textSize="@dimen/nornal_text_size" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/et_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/inner_padding"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/inner_padding" />
</RelativeLayout>