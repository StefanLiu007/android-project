<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toopbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_coloured"
    tools:context="com.example.leohuang.password_manager.activity.ChangePasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        toopbar:navigationIcon="@drawable/arrow_left"
        toopbar:popupTheme="@style/AppTheme.PopupOverlay"
        toopbar:theme="@style/AppTheme.AppBarOverlay"
        toopbar:title=" "
        toopbar:titleTextColor="@color/white"></android.support.v7.widget.Toolbar>

    <com.example.leohuang.password_manager.ui.NoScrollViewPager
        android:id="@+id/vp_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="@dimen/padding" />
</RelativeLayout>
