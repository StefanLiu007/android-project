<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include
        android:id="@+id/fragment_mainfragment"
        layout="@layout/topbar" >
    </include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_background1"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/frameLayout1"
            android:layout_width="200dp"
            android:layout_height="258dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/numbertshield" />

            <LinearLayout
                android:id="@+id/llayout"
                android:layout_width="118dp"
                android:layout_height="35dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/fontbackground"
                android:gravity="center" >

                <TextView
                    android:id="@+id/dtcode1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/dtcode2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/dtcode3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/dtcode4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/dtcode5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/dtcode6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="34sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_onclick_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="125dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/read_ear"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/read"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:text="点击阅读"
                    android:textColor="#000" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frameLayout1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.tdActivity.android.view.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="55dp"
                android:layout_height="55dp" />
      
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>