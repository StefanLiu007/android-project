<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_view_cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip" >

    <TextView
        android:id="@+id/tv_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-12dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-12dp"
        android:layout_toStartOf="@+id/listView"
        android:layout_toLeftOf="@+id/listView"
        android:textColor="#fff"
        android:textSize="30sp" />

    <com.tdActivity.android.view.CornerListView
        android:id="@+id/userlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_single"
        android:layout_marginTop="0dp"
        android:background="@drawable/listview_corner_round"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#b7b7b7"
        android:dividerHeight="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </com.tdActivity.android.view.CornerListView>

</RelativeLayout>