<com.tdActivity.android.view.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/menufag"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="-2dp"
            android:background="@drawable/shadow"
            android:minWidth="6dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/shadow1"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/contentfag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/shadow2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</com.tdActivity.android.view.SlidingMenu>