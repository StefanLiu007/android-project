<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <!-- <include layout="@layout/topbar"/> -->

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:background="@color/titlebackgroud" >

        <TextView
            android:id="@+id/click_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
        </TextView>

        <ImageButton
            android:id="@+id/back_addu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:background="@drawable/list_icon"
            android:clickable="false"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_headadd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/text18"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_finish_click"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/finishadd"
            android:clickable="false"
            android:contentDescription="@null" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:minHeight="100dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_applicationname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="应用名"
                    android:textColor="#999999"
                    android:textSize="@dimen/text18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_yyanme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:hint="请输入应用名"
                    android:minHeight="32dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:minHeight="100dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_accountname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="账户"
                    android:textColor="#999999"
                    android:textSize="@dimen/text18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_acount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:hint="请输入账户"
                    android:minHeight="32dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_key"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:minHeight="100dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_key"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="密匙"
                    android:textColor="#999999"
                    android:textSize="@dimen/text18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ed_passworld"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:hint="请输入密匙"
                    android:minHeight="32dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>