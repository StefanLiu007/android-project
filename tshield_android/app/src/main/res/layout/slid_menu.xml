<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="198dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txt_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="35dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/relaybackgroud"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:contentDescription="@null"
            android:src="@drawable/home_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/home_ig"
            android:gravity="center_vertical"
            android:text="首页"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text18" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:contentDescription="@null"
            android:src="@drawable/goto_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/countmg_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/relaybackgroud"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/acount_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:contentDescription="@null"
            android:src="@drawable/acounm_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/acount_ig"
            android:gravity="center_vertical"
            android:text="账户管理"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text18" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:contentDescription="@null"
            android:src="@drawable/goto_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/handpass_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/relaybackgroud"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/passdw_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:contentDescription="@null"
            android:src="@drawable/handpasw_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/passdw_ig"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text18" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:contentDescription="@null"
            android:src="@drawable/goto_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/relaybackgroud"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/about_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:contentDescription="@null"
            android:src="@drawable/aboutus_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/about_ig"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text18" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:contentDescription="@null"
            android:src="@drawable/goto_icon" />
    </RelativeLayout>

</LinearLayout>